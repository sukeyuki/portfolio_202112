<h1>admin page</h1>

<div id = "data_list">
    <div style="display:flex;">
        <div style="width:33%;">
            <h2>all group list</h2>
            <table border="1">
                <tr>
                <th>id</th>
                <th>name</th>
                <th>overview</th>
                <th>personal</th>
                </tr>
                <%Group.all.each do |group|%>
                    <tr>
                    <td><%=group.id%></td>
                    <td><%=group.name%></td>
                    <td><%=group.overview%></td>
                    <td><%=group.personal%></td>
                    </tr>
                <%end%>
            </table>
        </div>
        <div style="width:33%;">
            <h2>all user list</h2>
            <table border="1">
                <tr>
                <th>id</th>
                <th>name</th>
                <th>search_name</th>
                <th>email</th>
                </tr>
                <%User.all.each do |user|%>
                    <tr>
                    <td><%=user.id%></td>
                    <td><%=user.name%></td>
                    <td><%=user.search_name%></td>
                    <td><%=user.email%></td>
                    </tr>
                <%end%>
            </table>
        </div>
        <div style="width:33%;">
            <table>
                <h2>all group_user list</h2>
                <table border="1">
                <tr>
                <th>id</th>
                <th>user_name</th>
                <th>group_name</th>
                <th>role</th>
                </tr>
                <%GroupUser.all.each do |gu|%>
                    <tr>
                    <td><%=gu.id%></td>
                    <td><%=gu.user_id%></td>
                    <td><%=gu.group_id%></td>
                    <td><%=gu.role%></td>
                    </tr>
                <%end%>
            </table>
        </div>
    </div>
    <h2>all schedule list</h2>
    <div style="width:100%;height:50vh;overflow-x: scroll;overflow-y: scroll;">
        <table>
            <table border="1">
            <tr>
            <th>id</th>
            <th>title</th>
            <th>group_id</th>
            <th>contents</th>
            <th>start_at</th>
            <th>end_at</th>
            </tr>
            <%Schedule.all.each do |schedule|%>
                <tr>
                <td><%=schedule.id%></td>
                <td><%=schedule.title%></td>
                <td><%=schedule.group_id%></td>
                <td><%=schedule.contents%></td>
                <td><%=schedule.start_at%></td>
                <td><%=schedule.end_at%></td>
                </tr>
            <%end%>
        </table>
    </div>
</div>