                        <%=f.submit "response", class:"btn btn-primary"%>
                    <%end%>
                    <br>
                <%end%>
            </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
    </div>
</div>


